<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cap.aplication.wimk.PantallaInicio">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_description"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wink"
        android:layout_width="126dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/impact"
        android:text="@string/app_name"
        android:textColor="@color/darkblue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <ImageButton
        android:id="@+id/imageButton100"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:padding="0.1dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/flecha"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/text_home"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/letra"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descrip"
        android:layout_width="342dp"
        android:layout_height="229dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="84dp"
        android:background="#90CDDAEF"
        android:fontFamily="@font/letra"
        android:textColor="@color/darkblue"
        android:textColorHint="@color/darkblue"
        android:textSize="14sp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView732233"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/letra"
        android:hint="@string/Descripcion"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nombrePerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredient"
        android:layout_width="341dp"
        android:layout_height="111dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="84dp"
        android:background="#90CDDAEF"
        android:fontFamily="@font/letra"
        android:textColor="@color/darkblue"
        android:textColorHint="@color/darkblue"
        android:textSize="14sp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView73224"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/letra"
        android:hint="@string/Introduceingre"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nombrePerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>